{
  "compilerOptions": {
    "target": "es6",                       
    "module": "commonjs",                    
    "lib": ["es6"],                     
    "allowJs": true,
    "outDir": "build",      
    "rootDir": "./src",                    
    "strict": true,         
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
  },
  "include": ["src/**/*.ts", "src/models/model.ts"],
  "exclude": ["node_modules","**/*.spec.ts","./build"]
}